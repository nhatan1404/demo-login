<%- include('layouts/header'); %>

  <div class="flex items-center h-screen w-full justify-center">

    <div class="max-w-xs">
      <div class="bg-white shadow-xl rounded-lg py-3">
        <div class="photo-wrapper p-2">
          <img class="w-32 h-32 rounded-full mx-auto" src="<%= user.avatar %>" alt="John Doe">
        </div>
        <div class="p-2">
          <h3 class="text-center text-xl text-gray-900 font-medium leading-8">
            <%= user.fullName %>
          </h3>
          <table class="text-xs my-3">
            <tbody>
              <tr>
                <td class="px-2 py-2 text-gray-500 font-semibold">Email: </td>
                <td class="px-2 py-2">
                  <%= user.email %>
                </td>
              </tr>
              <tr>
                <td class="px-2 py-2 text-gray-500 font-semibold">Loại đăng nhập</td>
                <td class="px-2 py-2">
                  <span id="provider"
                    class="text-xs inline-block py-1 px-2.5 leading-none text-center whitespace-nowrap align-baseline font-bold text-white rounded">
                    <%= user.provider %>
                  </span>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>

  </div>

  <script>
    const colors = [
      { name: 'facebook', color: 'bg-blue-600' },
      { name: 'git', color: 'bg-gray-800' },
      { name: 'google', color: 'bg-red-600' },
      { name: 'local', color: 'bg-yellow-500' },
      { name: 'twitter', color: 'bg-blue-400' }
    ];

    const getColorType = (type) => {
      const item = colors.find(c => c.name === type);
      if (item) return item.color;
      return 'bg-gray-800';
    }

    const provider = document.getElementById('provider');
    const bg = getColorType(provider.innerText);
    provider.className += ' ' + bg;
  </script>

  <%- include('layouts/footer'); %>